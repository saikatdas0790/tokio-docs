{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "docker.docker",
        "tamasfe.even-better-toml",
        "mhutchie.git-graph",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "jnoortheen.nix-ide",
        "rust-lang.rust-analyzer",
        "TheNuProjectContributors.vscode-nushell-lang",
        "vadimcn.vscode-lldb"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "extraNixConfig": "experimental-features = nix-command flakes,download-buffer-size = 524288000",
      "packages": "nixfmt-unstable,nixd,direnv,nushell"
    }
  }
}